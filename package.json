{
	"name": "localstack",
	"publisher": "LocalStack",
	"displayName": "LocalStack Toolkit",
	"description": "LocalStack - Run locally, deploy globally!",
	"version": "1.2.3",
	"engines": {
		"node": ">=20",
		"vscode": "^1.83.0"
	},
	"categories": [
		"Testing",
		"Other"
	],
	"keywords": [
		"LocalStack",
		"Amazon",
		"AWS"
	],
	"galleryBanner": {
		"color": "#39227A",
		"theme": "dark"
	},
	"icon": "resources/icons/localstack-icon-256x256.png",
	"license": "Apache-2.0",
	"homepage": "https://github.com/localstack/localstack-toolkit-vscode#readme",
	"bugs": {
		"url": "https://github.com/localstack/localstack-toolkit-vscode/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/localstack/localstack-toolkit-vscode.git"
	},
	"recommendations": [
		"AmazonWebServices.aws-toolkit-vscode"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "LocalStack",
			"properties": {
				"localstack.cli.location": {
					"type": "string",
					"default": "",
					"markdownDescription": "Location of LocalStack CLI."
				}
			}
		},
		"commands": [
			{
				"command": "localstack.setup",
				"title": "Run Setup Wizard",
				"category": "LocalStack"
			},
			{
				"command": "localstack.refreshStatusBar",
				"title": "Refresh Status Bar",
				"category": "LocalStack",
				"enablement": "false"
			},
			{
				"command": "localstack.showCommands",
				"title": "Show Commands",
				"category": "LocalStack",
				"enablement": "false"
			},
			{
				"command": "localstack.viewLogs",
				"title": "View Logs",
				"category": "LocalStack"
			},
			{
				"command": "localstack.start",
				"title": "Start LocalStack",
				"category": "LocalStack"
			},
			{
				"command": "localstack.stop",
				"title": "Stop LocalStack",
				"category": "LocalStack"
			},
			{
				"command": "localstack.openLicensePage",
				"title": "Open license page",
				"category": "LocalStack"
			},
			{
				"command": "localstack.configureAwsProfiles",
				"title": "Configure AWS Profile \"localstack\"",
				"category": "LocalStack"
			}
		],
		"icons": {
			"localstack-logo": {
				"description": "LocalStack logo",
				"default": {
					"fontPath": "resources/fonts/localstack.woff",
					"fontCharacter": "\\e000"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "node --env-file=.env.local --env-file-if-exists=.env build/extension.mjs",
		"watch": "npm-run-all -p watch:esbuild watch:localstack-web-mock-server",
		"watch:esbuild": "node --watch --env-file=.env.local --env-file-if-exists=.env build/extension.mjs --watch",
		"watch:tsc": "tsc --watch",
		"watch:localstack-web-mock-server": "node --watch --env-file=.env.local --env-file-if-exists=.env build/localstack-web-mock-server.mjs",
		"package": "node build/extension.mjs --production",
		"pretest": "npm run compile",
		"check-types": "tsc",
		"lint": "eslint",
		"format": "biome check",
		"test": "vscode-test",
		"compile:font": "node build/icon-font.mjs"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.3",
		"@eslint/compat": "^1.3.2",
		"@eslint/js": "^9.35.0",
		"@types/fs-extra": "^11.0.4",
		"@types/mocha": "^10.0.10",
		"@types/ms": "^2.1.0",
		"@types/node": "20.x",
		"@types/vscode": "^1.83.0",
		"@vscode/test-cli": "^0.0.11",
		"@vscode/test-electron": "^2.5.2",
		"@vscode/vsce": "^3.6.0",
		"chokidar": "^4.0.3",
		"esbuild": "^0.25.9",
		"eslint": "^9.35.0",
		"eslint-plugin-import": "^2.32.0",
		"fs-extra": "^11.3.1",
		"ms": "^2.1.3",
		"npm-run-all": "^4.1.5",
		"p-min-delay": "^4.1.1",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.43.0",
		"uuid": "^13.0.0",
		"zod": "^4.1.5"
	}
}
